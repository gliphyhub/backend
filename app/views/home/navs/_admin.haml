-seccion="Inicio"
-tipoUser = current_user.tipo.tipo_de_usuario
-nombres =  current_user.perfil_admin.nombre.capitalize
-ap_paterno = current_user.perfil_admin.ap_paterno.capitalize
-ap_materno = current_user.perfil_admin.ap_materno.capitalize
-correo = current_user.email
-fecha_de_nacimiento = current_user.perfil_admin.fecha_de_nacimiento
-sexo = current_user.perfil_admin.genero.sexo
-imgCover = "covers/admin-cover.jpg"
-menuLateral=[{title:"Inicio", link:root_path, icon:"home"},{title:"Base de Datos", link:"!#", icon:"storage"},{title:"Publicaciones",link:publicaciones_path, icon:"account_circle"},{title:"Agregar",link:new_publicacion_path, icon:"add"}]
-tablas=[{title:"Panel de administración", link:rails_admin_path},{title:"Archivo", link:"basededatos/archivo"},{title:"Color", link:"basededatos/color"}, {title:"Generación", link:"basededatos/generacion"},{title:"Grado", link:"basededatos/grado"},  {title:"Grupo", link:"basededatos/grupo"},{title:"Materia", link:"basededatos/materia"}, {title:"Administrativos", link:"basededatos/perfil_admin"},{title:"Profesores", link:"basededatos/perfil_profesor"},{title:"Alumnos", link:"basededatos/perfil_alumno"}, {title:"Tutores", link:"basededatos/perfil_tutor"}, {title:"Publicación", link:"basededatos/publicacion"},{title:"Tipos", link:"basededatos/tipo"}, {title:"Turno", link:"basededatos/turno"}, {title:"Usuario", link:"basededatos/user"}]

-nombreCorto = -nombres.split(/ /)[0] + " " + -ap_paterno
-if sexo == "masculino"
	-imgPerfil = "users/user01.jpg"
-else
	-imgPerfil = "users/user02.jpg"

-#=========================================
-#=========== Barra de navegación ================
-#=========================================
#nav-user.navbar-fixed
	%nav.negro-flat
		.nav-wrapper
			-#=========================================
			-#============= Botón Menú === ================
			-#=========================================
			.left
				%a#menu-activator.hide-on-large-only.btn-flat.white-bonis{href:"#", data:{activates:"menu-movil"}}
					%i.material-icons menu
			-#=========================================
			-#============= Botón Notificaciones === ================
			-#=========================================
			.left
				%a#notificaciones-activator.btn-flat.white-bonis{href:"#", data:{activates:"notificaciones-menu"}}
					%i.material-icons notifications
			-#=========================================
			-#====== Botón Menú - Opciones usuario ==============
			-#=========================================
			.right
				%a.user-activator.btn-flat.white-bonis.hide-on-small-only.no-upper{href:"#!", data:{activates:"user-menu"}}
					=image_tag "#{imgPerfil}",class:"admin-img left"
					%span #{nombreCorto}
				%a.user-activator.btn-flat.white-bonis.hide-on-med-and-up{href:"#!",data:{activates:"user-menu"}}
					%i.material-icons.left apps
					%span OPCIONES
			-#=========================================
			-#============== Toggle Menú =================
			-#=========================================
			.right
				#toggleMenu.btn-flat.white-bonis.hide-on-med-and-down.tooltipped.hoverable
					%i.material-icons.center view_stream
			-#=========================================
			-#========== Navegación - menú =================
			-#=========================================
			.col.s8.margincito-left.hide-on-small-only.truncate
				%a.breadcrumb= "Gliphy#{tipoUser}"
				%a.breadcrumb= "#{seccion}"

-#=========================================
-#========== Menú navegación - Large ==============
-#=========================================
%ul#menu-normal.side-nav.fixed.blue-grey.darken-4
	.side-contenedor
		.side-lista
			%br/
			-menuLateral.each do |item|		
				-if item[:title] == "Base de Datos"
					%li
						%ul.collapsible.collapsible-accordion
							%li
								%a#base-datos-list.waves-effect.white-bonis.collapsible-header
									%i.material-icons.left.white-bonis=item[:icon]
									%span=item[:title]
									%i.arrow.material-icons.white-bonis arrow_drop_down
								.collapsible-body
									%ul.blue-grey.darken-3
										-tablas.each do |tabla|
											%li
												%a.waves-effect.white-bonis{href:tabla[:link]}
													%span= 	tabla[:title]
				-else
					%li.waves-effect
						%i.material-icons.left.white-bonis=item[:icon]
						=link_to item[:title], item[:link], class:"white-bonis"
				%br/
		.line-divider
		%li.ayuda-btn
			%a.waves-effect.white-bonis{href:"help.html"}
				%i.material-icons.left.white-bonis error
				%span Ayuda
