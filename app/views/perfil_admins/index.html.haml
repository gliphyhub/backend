%main.navegacion-espacio
  .row
    .col.s12
      %h2.red-text.center-align.trun Perfiles de administrador
    .col.s12
      .tabla-contenedor
        %table.striped
          %thead
            %tr
              %th.b
              %th.b
              %th User
              %th Nss
              %th Ap paterno
              %th Ap materno
              %th Nombre
              

          %tbody
            - @perfil_admins.each do |perfil_admin|
              %tr
                %td
                  .btn.waves-effect.btn-square
                    = link_to '<i class="material-icons white-text">remove_red_eye</i>'.html_safe, perfil_admin
                %td
                  .btn.waves-effect.btn-square.red
                    = link_to '<i class="material-icons white-text">delete</i>'.html_safe, perfil_admin, :method => :delete, :data => { :confirm => 'Are you sure?' }
                %td= perfil_admin.user.email
                %td= perfil_admin.nss
                %td= perfil_admin.ap_paterno
                %td= perfil_admin.ap_materno
                %td= perfil_admin.nombre
                
      .col.s12
        %br
        = will_paginate @perfil_admins