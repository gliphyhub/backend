%main.navegacion-espacio
	-#===============Boton buscar================
	.fixed-action-btn
		%a.btn-floating.btn-large.waves-effect.waves-light.red.tooltipped.hoverable{href:"#buscar", data:{position:"left", delay:"50", tooltip:"Buscar"}}
			%i.material-icons search
	-#===============Mensaje de buscar=============
	#buscar.modal.bottom-sheet
		.modal-content
			%h5 Ingrese el término de la búsqueda
			%br/
			.input-field
				%i.material-icons.prefix search
				%input#links1.validate{type:"text"}
				%label{for:"links1"} Búsqueda

		.modal-footer
			%p.right
				
				%a.modal-action.modal-close.waves-effect.waves-green.btn{href:"#"} Buscar
				%a.modal-action.modal-close.waves-effect.waves-green.btn-flat{href:"#"} Volver
	-#============Dirigido a ============
	#dirigido.modal
		.modal-content
			%h4 Para
			.chip 
				%i.icono-on-chip.material-icons person
				%span Grupo_1
			.chip 
				%i.icono-on-chip.material-icons person
				%span Grupo_2
			.chip 
				%i.icono-on-chip.material-icons person
				%span Grupo_3
			%p.right
				%a.modal-action.modal-close.waves-effect.btn-flat{href:"#!"} Volver
	-#===============Principal contenido===========
	.row	
		#parte-izquierda.col.s12.l7.animar		
			.col.s12
				%h3.red-text.center-align Publicaciones
			#diversos.col.s12
				-#======== CALENDAR ==========
				#calendario-contenedor.col.s12.m7.no-padding
					%h5.truncate.center-align Calendario
					#events_calendar
						= render partial: "calendar", locals: {events: @publicaciones}

				-#======== FILTROS =========
				#flitros-contenedor.col.s12.m5.padding-one
					.col.s12
						%h4.blue-text.truncate.center-align= "#{t('date.month_names')[Date.today.month].capitalize} #{Date.today.day}"
					.col.s12
						%p
							.input-field
								%i.material-icons.prefix.center-align sort
								%select
									%option{value:"", disabled:"", selected:""} Elige el orden
									%option{value:"0"} Fecha de publicación
									%option{value:"1"} Importancia
								%label Ordenar por:
					.col.s12
						%p
							%input#self.with-gap{name:"grupo1", type:"checkbox"}
							%label.black-text{for:"self",style:"margin-left: 1rem"} Mostrar sólo mis publicaciones
					.col.s12.hide-on-med-and-down
						%p Elegir tipo de vista
					.col.s12.hide-on-med-and-down
						%p
							%a#vista-tres-columnas.btn-flat.tooltipped.hoverable.red.white-bonis.vista-btn{href:"#!", data:{position:"top", delay:"50", tooltip:"3 columnas"}}
								%i.material-icons.center view_column
							%a#vista-simple.btn-flat.tooltipped.hoverable.vista-btn{href:"#!", data:{position:"top", delay:"50", tooltip:"Vista simple"}}
								%i.material-icons.center view_day
			-#======== CARDS =======
			#cards-comunicados.col.s12
				%h4.truncate.center-align Comunicados
				.row
					-@urgentes.each do |w|

						.col.s12
							%a.col.comunicado-contenedor.hoverable{href:"#!"}
								.card{style: "margin: 0px; padding: 0"}
									.head-card.urgente-card
										%h4.truncate= w.titulo
									%p.indigo-text.accent-1-text.truncate.etiqueta
										%i.material-icons.left today
										%span= "Publicado #{w.created_at.to_date}"
									%p.indigo-text.accent-1-text.truncate.etiqueta
										%i.material-icons.left eate_range
										%span= "Termino #{w.fecha_de_termino}"
									%p.indigo-text.accent-1-text.truncate.etiqueta
										%i.material-icons.left person
										%span= "De #{w.perfil_profesor.nombre}"
									%p.indigo-text.accent-1-text.truncate.etiqueta
										%i.material-icons.left group
										-w.grupos.each do |g| 
											%span.trun= "Para #{g.grupo}"
											-#%span.right
											-#	%a{href:"#dirigido"} Ver todo
									%p.text-normal texto
									%p{style:"margin-top: 1em"}
										.chip 
									- @archi.each do |m| 
										- if m.publicacion_id == w.id
											- @archivos.each do |a| 
												-if a == m.nombre
													- if m == "." || m == ".." then next end
													%i.icono-on-chip.material-icons attachment
													-#%a{:target => "_blank", :href => "ruta_del_archivo/#{a}"}
													%a.grey-text.text-darken-1{taget: "_blank", href:"public/prof/archivos/#{a}"} Archivo adjunto1
										.chip 
											%i.icono-on-chip.material-icons attachment
											%a.grey-text.text-darken-1{href:"#!"} Archivo adjunto1
								.card-action.grey.lighten-2
									.row
										.col.s12.center-align
											%img{src:"../../images/users/user02.jpg"}
										.col.s12.center-align
											%h4.truncate Nombre_publicador
										.col.s12
											%p.jus lol
								.chip
									%i.icono-on-chip.material-icons equalizer
									%span 111


					.col.s12.m6
						%a.hoverable.col.comunicado-contenedor{href:"#!"}
							.card
								.head-card.negro-card
									%h4.truncate  Tarea				
								.card-prev.card-content
									%p.min-text.left
										%i.material-icons.icon-special person
										Nombre de quien &nbsp;&nbsp;&nbsp;
									%p.min-text.left
										%i.material-icons.icon-special equalizer
										4963
									%br/
									%br/
									%p.text-normal.truncate Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum
									.chip
										%i.icono-on-chip.material-icons today
										Publ: 03/09/18
									.chip
										%i.icono-on-chip.material-icons date_range
										Term: 03/09/19

