= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
	.col.s12
		= devise_error_messages!
	.input-field.col.s12
		%i.material-icons.prefix.medium email
		=f.email_field :email, autofocus: true, class:"validate"
		%br/
		=f.label :email
	.input-field.col.s12
		=f.submit t('.send_me_reset_password_instructions'), class:"col s12 btn waves-effect waves-light"
